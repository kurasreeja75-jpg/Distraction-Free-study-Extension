{
  "manifest_version": 3,
  "name": "Focus Blocker",
  "version": "1.0",
  "description": "Blocks distraction sites.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage",
    "alarms"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Mode"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}